{ 
  "LoginAppName":"library_manager",
  "AppName":"Library manager",
  "DefaultLanguage":"en",
  "SystemDatasets":
  {
    "UsersDatasetDescriptor":
    {
      "Name":"Users",
      "Decription":"Dataset containing system users.",
      "Attributes":
      [
        { 
          "Name":"Username",
          "Description":"Username containing at least 8 and at most 20 characters.",
          "MinChar":8,
          "MaxChar":20
        },
        {
          "Name":"Password",
          "Description":"Password containing at least 8 and at most 20 characters, at least 1 number, 1 lower and 1 upper-case letter.",
          "MinChar":8,
          "MaxChar":20,
          "MinNumber":1,
          "MinLowerCase":1,
          "MinUpperCase":1
        },
        {
          "Name":"Name",
          "Description":"User's name.",
          "Type":"string",
          "Nullable":false,
          "Unique":false
        },
        {
          "Name":"Position",
          "Description":"User's position.",
          "Type":"string",
          "Nullable":true,
          "Unique":false
        },
        {
          "Name":"Email",
          "Description":"User's email.",
          "Type":"string",
          "Nullable":false,
          "Unique":true
        }
      ]
    }
  },
  "Datasets": 
  [
    {
      "Name":"Books",
      "Description":"All books in our library.",
      "Attributes": 
      [
        {
          "Name":"Title",
          "Description":"Book title.",
          "Type":"string",
          "Nullable":false,
          "Unique":false
        },
        {
          "Name":"Authors",
          "Description":"List of book authors (if author is not in the list, please add him first in Authors dataset).",
          "Type":"Author",
          "Min":1,
          "Unique":false
        },
        {
          "Name":"Book ID",
          "Description":"Book ID.",
          "Type":"string",
          "Nullable":false,
          "Unique":true
        },
        {
          "Name":"Genre",
          "Description":"The genre of the book (multiple can be chosen, if genre is not in the list, add it first in the Genre dataset).",
          "Type":"Genre.Name",
          "Min":1,
          "Max":5,
          "Unique":false
        },
        {
          "Name":"Published year",
          "Description":"Year when the book was published.",
          "Type":"year",
          "Nullable":false,
          "Unique":false
        },
        {
          "Name":"Original price",
          "Description":"Original price of the book.",
          "Type":"float_with_currency",
          "Nullable":false,
          "Unique":false
        }
      ]
    },
    {
      "Name":"Authors",
      "Description":"All the authors.",
      "Attributes": 
      [
        {
          "Name":"Name",
          "Description":"Author's name.",
          "Type":"string",
          "Nullable":false,
          "Unique":false
        },
        {
          "Name":"Birth year",
          "Description":"Year when the author was born.",
          "Type":"year",
          "Nullable":false,
          "Unique":false
        }
      ]
    },
    {
      "Name":"Genres",
      "Description":"Enum of genres.",
      "Attributes": 
      [
        {
          "Name":"Name",
          "Description":null,
          "Type":"string",
          "Nullable":false,
          "Unique":true
        }
      ]
    },
    {
      "Name":"Readers",
      "Description":"All the readers of our library.",
      "Attributes": 
      [
        {
          "Name":"Reader's card ID",
          "Description":"Reader's card ID.",
          "Type":"string",
          "Nullable":false,
          "Unique":true
        },
        {
          "Name":"Name",
          "Description":"Reader's name.",
          "Type":"string",
          "Nullable":false,
          "Unique":false
        },
        {
          "Name":"Birth date",
          "Description":"Reader's birth date.",
          "Type":"date",
          "Nullable":false,
          "Unique":false
        }
      ]
    },
    {
      "Name":"Borrowings",
      "Description":"Readers linked with borrowed books.",
      "Attributes": 
      [
        {
          "Name":"Book",
          "Description":"Name of the borrowed book.",
          "Type":"Book",
          "Min":1,
          "Max":1,
          "Nullable":false,
          "Unique":true
        },
        {
          "Name":"Reader",
          "Description":"Reader's card ID.",
          "Type":"Reader",
          "Min":1,
          "Max":1,
          "Nullable":false,
          "Unique":false
        },
        {
          "Name":"Borrovind date",
          "Description":"Date and time of the borrowing.",
          "Type":"datetime",
          "Nullable":false,
          "Unique":false
        },
        {
          "Name":"Return date",
          "Description":"End date of the borrowing.",
          "Type":"date",
          "Nullable":false,
          "Unique":false
        },
        {
          "Name":"Returned",
          "Description":"Yes, if book was successfully returned.",
          "Type":"bool",
          "Nullable":false,
          "Unique":false
        }
      ]
    }
  ]
}