@page 
@using SharedLibrary.Enums 
@model RazorWebApp.Pages.User.CreateModel 
@{ 
    ViewData["Title"] = "Users"; 
}

@{Html.RenderPartial("Shared/_LoggedMenuPartial", Model.MenuData); }

<div class="row">
    <div class="col-sm-12">
        <h2>@ViewData["Title"]</h2>
        @if (Model.Message != null || Model.Message != ""){
                <div class="modal-body col-sm-12 center-block text-center">
                    <span><b>@Model.Message</b></span>
                </div>
        }
        <form method="post">

            <div class="form-group">
                <label>@Model.ApplicationDescriptor.SystemDatasets.UsersDatasetDescriptor.UsernameAttributes.Name</label>
                <small>@Model.ApplicationDescriptor.SystemDatasets.UsersDatasetDescriptor.UsernameAttributes.Description</small>
                <input name="ValueList[0]" class="form-control">
            </div>
            <div class="form-group">
                <label>@Model.ApplicationDescriptor.SystemDatasets.UsersDatasetDescriptor.PasswordAttributes.Name</label>
                <small>@Model.ApplicationDescriptor.SystemDatasets.UsersDatasetDescriptor.PasswordAttributes.Description</small>
                <input name="ValueList[1]" class="form-control">
            </div>
            <div class="form-group">
                <label>Rights</label>
                <select name="ValueList[2]" 
                        asp-items="Model.UserRightsList"
                        class="form-control"
                        >
                </select>
            </div>

            @for (int i = 3; i < Model.ApplicationDescriptor.SystemDatasets.UsersDatasetDescriptor.Attributes.Count + 3; i++){
                <div class="form-group">
                     @{ var attribute = Model.ApplicationDescriptor.SystemDatasets.UsersDatasetDescriptor.Attributes[i - 3]; }
                    <label>@attribute.Name</label>
                    <small>@attribute.Description</small>
                    <input name="ValueList[@i]" 
                           class="form-control">
                    <!--<span asp-validation-for="Model.ValueList[@i]" class="text-danger"></span>-->
                </div>
            }
            
            <div class="form-group">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </form>
    </div>
</div>