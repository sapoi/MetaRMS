@page 
@using SharedLibrary.Enums 
@model RazorWebApp.Pages.User.CreateModel 
@{ 
    ViewData["Title"] = "Users"; 
}

@{Html.RenderPartial("Shared/_LoggedMenuPartial", Model.MenuData); }

<div class="row">
    <div class="col-sm-12">
        <h2>@ViewData["Title"]</h2>
        <form method="post">

            <div class="form-group">
                <label>Username</label>
                <input name="ValueList[0]" class="form-control">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input name="ValueList[1]" class="form-control">
            </div>
            <div class="form-group">
                <label>Rights</label>
                <select name="ValueList[2]" 
                        asp-items="Model.UserRightsList"
                        class="form-control"
                        >
                </select>
            </div>
             
            @for (int i = 3; i < Model.UserDataKeys.Count + 3; i++){ 
            <input type="hidden" asp-for="UserDataKeys[i-3]" />
            <div class="form-group">
                <label>@Model.UserDataKeys[i-3]</label>
                <input name="ValueList[@i]" 
                       class="form-control"
                        >
            </div>
            }
            
            <div class="form-group">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </form>
    </div>
</div>