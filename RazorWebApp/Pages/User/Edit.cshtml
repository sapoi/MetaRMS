@page "{id?}" 
@using SharedLibrary.Enums 
@model RazorWebApp.Pages.User.EditModel 
@{ 
    ViewData["Title"] = "Users"; 
}

@{Html.RenderPartial("Shared/_LoggedMenuPartial", Model.MenuData); }

<div class="row">
    <div class="col-sm-12">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <input type="hidden" asp-for="UserId" /> 

            <div class="form-group">
                <label>Username</label>
                <input value="@Model.Data.Username" name="ValueList[0]" class="form-control">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input value="@Model.Data.Password" name="ValueList[1]" class="form-control">
            </div>
            <div class="form-group">
                <label>Rights</label>
                <select name="ValueList[2]" 
                        asp-items="Model.UserRightsList"
                        class="form-control"
                        asp-for="@Model.Data.RightsId"
                        >
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </form>
    </div>
</div>