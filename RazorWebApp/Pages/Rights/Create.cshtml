@page 
@using SharedLibrary.Enums 
@model RazorWebApp.Pages.Rights.CreateModel 
@{ 
    ViewData["Title"] = "Rights"; 
}

@{Html.RenderPartial("Shared/_LoggedMenuPartial", Model.MenuData); }

<div class="row">
    <div class="col-sm-12">
        <h2>@ViewData["Title"]</h2>
        @if (Model.Message != null || Model.Message != ""){
                <div class="modal-body col-sm-12 center-block text-center">
                    <span><b>@Model.Message</b></span>
                </div>
        }
        <form method="post">
            <input type="hidden" asp-for="ApplicationDescriptor" />

            <div class="form-group">
                <label>Name</label>
                <input name="RightsName" class="form-control">
            </div>
             
            @for (int i = 2; i < Model.ApplicationDescriptor.Datasets.Count + 2; i++){ 
            <input type="hidden" asp-for="DatasetsIds[i-2]" />
            <div class="form-group">
                @{ var dataset = Model.ApplicationDescriptor.Datasets[i-2]; }
                <label>@dataset.Name</label>
                <select name="ValueList[@dataset.Id]" 
                        asp-items="Html.GetEnumSelectList<RightsEnum>()" 
                        class="form-control"
                        >
                </select>
            </div>
            }
            <hr>
            <div class="form-group">
                <label>Users</label>
                <select name="ValueList[@((long)SystemDatasetsEnum.Users)]" 
                        asp-items="Html.GetEnumSelectList<RightsEnum>()"
                        class="form-control"
                        >
                </select>

            </div>
            <div class="form-group">
                <label>Rights</label>
                <select name="ValueList[@((long)SystemDatasetsEnum.Rights)]" 
                        asp-items="Html.GetEnumSelectList<RightsEnum>()"
                        class="form-control"
                        >
                </select>

            </div>



            <div class="form-group">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </form>
    </div>
</div>