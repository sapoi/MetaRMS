@page "{datasetName?}/{id?}"
@using RazorWebApp.Structures
@model RazorWebApp.Pages.Data.EditModel 
@{ 
    ViewData["Title"] = @Model.ActiveDatasetDescriptor.Name; 
}

@{Html.RenderPartial("Shared/_LoggedMenuPartial", Model.MenuData); }

<div class="row">
    
    @{Html.RenderPartial("Shared/_ReadAuthorizedDatasetsMenuPartial", Model.ReadAuthorizedDatasets); }

    <div class="col-sm-9">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <input type="hidden" asp-for="DatasetName"/>
            <input type="hidden" asp-for="DataId"/>

            @for (int i = 0; i < Model.ActiveDatasetDescriptor.Attributes.Count; i++){
                <input type="hidden" asp-for="AttributesNames[i]"/>
                <div class="form-group">
                    @{ var attribute = Model.ActiveDatasetDescriptor.Attributes[i]; }
                    <label>@attribute.Name</label>
                    <small>@attribute.Description</small>
                    @{Html.RenderPartial("Shared/_EditBuilderPartial", 
                                          new EditBuilderPartialData {
                                                                        Attribute = attribute, 
                                                                        OutValue = "ValueList[" + attribute.Name + "]", 
                                                                        InValue = Model.Data[attribute.Name],
                                                                        SelectData = Model.SelectData
                                                                       }
                                        );
                    }

<!--
                    <label>@attribute.Name</label>
                    <small>@attribute.Description</small>
                    <input value="@Model.Data[attribute.Name].ToString()" 
                           name="ValueList[@i]" 
                           class="form-control">
                    <span asp-validation-for="Model.ValueList[@i]" 
                          class="text-danger"></span> -->
                </div>
            }
            <div class="form-group">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </form>
    </div>
</div>