@page
@model Core.Pages.Appinit.IndexModel
@{
    ViewData["Title"] = "Create new application";
}

<!-- Logout menu -->
@{Html.RenderPartial("Shared/_LogoutMenuPartial"); }

<!-- Application creation body -->
<div class="container-fluid">
    <div class="row">
        <!-- Header -->
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2>Create new application</h2>
        </div>
    </div>
    <div class="row">
        <!-- Info box -->
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <!-- Messages -->
            @if (Model.Messages != null && Model.Messages.Count != 0){
                Html.RenderPartial("Shared/_MessagesPartial", Model.Messages);
            }
            else 
            {
                <div><b>Make sure you have read the about page and that you are inserting application descriptor in correct format.</b></div>
            }
        </div>
    </div>
    <div class="row">
        <!-- Application creation form -->
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Email</label>
                    <input name="Email" value="@Model.Email" class="form-control" type="email" required />
                </div>
                <div class="form-group">
                    <label>JSON file with application descriptor</label>
                    <input name="FileUpload" type="file" class="form-control" />
                </div>
                <input type="submit" value="Upload" class="btn btn-default" />
            </form>
        </div>
    </div>
</div>

